<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="1280" prefWidth="2048" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.codinghub.controllers.RegisterController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="425.0" prefWidth="762.0" style="-fx-background-color: &quot;#F5EFE7&quot;;" VBox.vgrow="ALWAYS">
            <children>
                <Pane layoutX="87.0" layoutY="107.0" prefHeight="702.0" prefWidth="886.0" style="-fx-background-color: &quot;#D8C4B6&quot;; -fx-background-radius: 20;">
                    <children>
                        <Label layoutX="44.0" layoutY="50.0" text="Hello, explorer" textFill="#213555">
                            <font>
                                <Font name="JetBrainsMono NF ExtraBold" size="50.0" />
                            </font>
                        </Label>
                        <Label layoutX="43.0" layoutY="148.0" text="Create an account to start your coding journey" textFill="#3E5879" fx:id="subtitle">
                            <font>
                                <Font name="Arial" size="38.0" />
                            </font>
                        </Label>

                        <TextField fx:id="emailField" layoutX="64.0" layoutY="275.0" prefHeight="43.0" prefWidth="312.0" promptText="Enter your email" style="-fx-background-radius: 5;" />
                        <PasswordField fx:id="passwordField" layoutX="64.0" layoutY="330.0" prefHeight="43.0" prefWidth="312.0" promptText="Enter your password" style="-fx-background-radius: 5;" />

                        <Button fx:id="registerButton" layoutX="120.0" layoutY="408.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" prefHeight="20.0" prefWidth="201.0" style="-fx-background-color: &quot;#213555&quot;; -fx-background-radius: 5;" text="Create account" textFill="#fff">
                            <font>
                                <Font name="JetBrainsMono NFM ExtraBold" size="20.0" />
                            </font>
                        </Button>

                        <Label layoutX="64.0" layoutY="485.0" text="Already have an account?" textFill="#3E5879">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>

                        <Button layoutX="347.0" layoutY="482.0" onAction="#onLoginButtonClick" mnemonicParsing="false" style="-fx-background-color: &quot;#213555&quot;; -fx-background-radius: 5;" text="Log in" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>

                    </children>
                </Pane>
                <Label fx:id="authMessage" layoutX="200.0" layoutY="350.0" textFill="#ff7227"/>
            </children>
        </AnchorPane>
    </children>
</VBox>